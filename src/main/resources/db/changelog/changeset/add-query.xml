<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xmlns:pro="http://www.liquibase.org/xml/ns/pro"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
            http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd
            http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd
            http://www.liquibase.org/xml/ns/pro http://www.liquibase.org/xml/ns/pro/liquibase-pro-latest.xsd">
    <changeSet id="3" author="Kharitonov">
        <createTable tableName="query">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints nullable="false"/>
            </column>
            <column name="title" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="varchar(2048)">
                <constraints nullable="false"/>
            </column>
            <column name="create_at" type="datetime">
                <constraints nullable="false"/>
            </column>
            <column name="from_user_id" type="bigint">
                <constraints foreignKeyName="from_user_query_fk" referencedTableName="usr" referencedColumnNames="id" nullable="false"/>
            </column>
            <column name="for_user_id" type="bigint">
                <constraints foreignKeyName="for_user_query_fk" referencedTableName="usr" referencedColumnNames="id" nullable="false"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>